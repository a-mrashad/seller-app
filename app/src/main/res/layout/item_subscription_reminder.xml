<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvOrderNum"
        style="@style/h2_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12312312"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvItemsNum"/>

    <TextView
        android:id="@+id/tvItemsNum"
        style="@style/h2_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22"
        app:layout_constraintStart_toEndOf="@id/tvOrderNum"
        app:layout_constraintEnd_toStartOf="@id/tvOrderPickupTime"/>

    <TextView
        android:id="@+id/tvOrderPickupTime"
        style="@style/h2_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:00 AM"
        app:layout_constraintStart_toEndOf="@id/tvItemsNum"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>